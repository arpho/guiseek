{
    "window.zoomLevel": 0,
    "explorer.sortOrder": "type",
    // Editor
    "editor.autoIndent": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.cursorSmoothCaretAnimation": true,

    "editor.lineHeight": 22,
    // Workbench
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.colorCustomizations": {
      "activityBar.background": "#212121",
      "activityBar.foreground": "#fff",
      "activityBar.inactiveForeground": "#888",
      "activityBarBadge.background": "#3fc52d",
      "activityBarBadge.foreground": "#15202b",
      "titleBar.activeBackground": "#212121",
      "titleBar.inactiveBackground": "#333",
      "titleBar.activeForeground": "#fff",
      "titleBar.inactiveForeground": "#333",
      "statusBar.background": "#212121",
      "statusBarItem.hoverBackground": "#111",
      "statusBar.foreground": "#fff"
    },
    // File settings
    "files.exclude": {
      "**/.git": true,
      "**/.DS_Store": true,
      "**/*.js": {
        "when": "$(basename).ts"
      },
      "**/*.js.map": {
        "when": "$(basename)"
      }
    },
    // "files.hotExit": "onExit",
    "files.defaultLanguage": "typescript",
    "files.trimTrailingWhitespace": true,
    "files.associations": {
      "renovate.json5": "jsonc"
    },
    // Peacock Settings
    "peacock.color": "#f9e64f",
    // Prettier settings
    "prettier.singleQuote": true,
    "prettier.printWidth": 100,
    // REST client
    "rest-client.environmentVariables": {
    }
  }


